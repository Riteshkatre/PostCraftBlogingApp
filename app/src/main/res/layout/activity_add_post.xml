<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.AddPostActivity">

    <ImageView
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/etccircle"/>
    <ImageView

        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/etccircle2"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/back"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:backgroundTint="#DCA343"
        app:cardCornerRadius="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/arrow_back" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/etvCircle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Post"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sofia_pro_black"
        android:textSize="@dimen/_30sdp"
        android:textColor="@color/black"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/etvCircle1"
        app:cardCornerRadius="@dimen/_25sdp"
        android:layout_margin="@dimen/_13sdp"
        app:cardElevation="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_below="@+id/etvCircle1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_10sdp"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imgPost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:background="@drawable/upload"
                            />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/imgPhotoClick"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_15sdp"

                    android:src="@drawable/camera"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="#77BDC4C4"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                android:layout_height="@dimen/_150sdp">
                <EditText
                    android:id="@+id/postDesc"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_8sdp"
                    android:hint=" What's in your minds ?"
                    android:scrollbars="vertical"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Done"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>